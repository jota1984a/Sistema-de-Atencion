@model IEnumerable<Natencion.Models.COMUNA>

@{
    ViewBag.Title = "Index";
}

<h2>Comunas</h2>

<p>
    @Html.ActionLink("Crear nueva comuna", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nombre de Comuna
        </th>
        <th>
            Ciudad
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NOMBRE_COMUNA)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CIUDAD.NOMBRE_CIUDAD)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.ID_COMUNA }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.ID_COMUNA }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.ID_COMUNA })
        </td>
    </tr>
}

</table>
